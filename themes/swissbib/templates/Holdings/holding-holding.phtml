				<li><a href="<?=$href?>" ><?=$this->escapeHtml($action['label'])?></a></li>
			<?php endforeach; ?>
		</ul>
    </td>
    <td>not implemented</td>
    <td><?=$this->escapeHtml($holding['location_expanded'])?><?=$mapLink?></td>
	<td><?=$this->escapeHtml($holding['signature'])?></td>
