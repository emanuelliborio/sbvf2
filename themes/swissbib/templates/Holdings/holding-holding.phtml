	$actions[] = array(
		'label'	=> 'zum Bestand',
		'action'=> $holding['backlink'],
		'escape'=> false
	);
}

if (isset($holding['locationMap']) && $holding['locationMap']) {
	$mapLink = '<a href="' . $holding['locationMap'] . '" class="holdingMapLink">Lageplan anzeigen</a>';
}

?>
